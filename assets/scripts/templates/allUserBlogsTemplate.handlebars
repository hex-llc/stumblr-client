{{#each blogs as |blog|}}
  <div class="blog-container">

    <div class="blog-profile-pic-frame shadow-sm"><img class="blog-profile-pic" src="./assets/images/default_profile.png"/></div>

    <div data-id='{{blog._id}}' class="blog-post shadow">
      <div class="blog-post-header">
        @{{blog.owner.username}}
        <div>
          <button class="btn blog-edit-btn" type="button" data-toggle="modal" data-target="#update-blog"><img class="icon-style" src="./assets/images/edit.png" alt="edit button"/></button>
          <button class="btn blog-delete-btn" type="button" data-toggle="modal" data-target="#delete-blog"><img class="icon-style" src="./assets/images/delete.png" alt="delete button"/></button>
        </div>
      </div>
      <h3 class="blog-post-title">{{limit blog.title 100}}</h3>
      <div class="blog-post-body" data-id="{{blog._id}}">
        <p>{{blog.body}}</p>
        <div class="container blog-post-comment-container">
          {{#each blog.comments as |comment|}}
          <div class="row comment-post">
            <div class="col-1 comment-post-profile">
              <img class="blog-commment-profile-pic" src="./assets/images/default_profile.png"/>
            </div>
            <div class="col-10 comment-post-content">
              <div class="comment-post-owner">
                <strong><em>@{{comment.owner.username}}</em></strong>
              </div>
              <div class="comment-post-body">
                {{comment.text}}
              </div>
            </div>
            <div class="col-1 comment-post-edit">
              <button class="btn comment-options-btn" type="button"><img class="icon-style" src="./assets/images/more.png" alt="comment options"/></button>
            </div>
          </div>
          {{/each}}
          <div class="blog-comments-title">
            <input class="comment-input" type="text" name="comment[text]" placeholder="Add a comment here">
            <button  data-id="{{blog._id}}" class="btn btn-outline-primary add-comment-btn btn-sm" type="button" data-toggle="modal" data-target="#add-comment">
              <img class="icon-style" src="./assets/images/chat.png" alt="add comment"/> Comment</button>
          </div>
        </div>
      </div>
      <div class="expand-wrapper"><button class="expand-button"></button></div>
      <div class="blog-post-footer">
        <div class="blog-footer-update-time">
          Created on: {{formatDate blog.createdAt}}
        </div>
        <div class="blog-footer-comment-count">
          Comments: {{blog.commentCount}}
        </div>
      </div>
    </div>

  </div>
{{/each}}
